#include "main.h"

int main()
{
	vector<accountHolder> accounts;
	accounts.push_back(accountHolder("Chris Meudec"));
	
	vector<Vehicle> vehicles;

	accountHolder& user = accounts.back();
	cout << "User logged in" << endl;

	string VRAaccName = "";
	bool userHasAborted = false;
	while(VRAaccName == "" && !userHasAborted){
		cout << "Car registration number entered in" << endl;
		string newCarRegNo = "D012345";
		cout << "contacting VRA" << endl;
		VRAaccName = "VRA valid name"; //reponse from VRA; here goes real API code
		if(VRAaccName != ""){
			cout << "Registration number correct; please confirm details" << endl;
			//
			// display form to enable user to confirm the details or abort
			// 
			bool confirmed = true;
			if(confirmed){
				vehicles.push_back(Vehicle(newCarRegNo, user));
				cout << "Vehicle has been successfully added registered with us!" << endl;
			}
		}
		else
			cout << "This registration number is unrecognized; please retype and try again" << endl;
			// else keep on showing the form for registration number until right or user aborted
	}
	
	std::getchar();
}

